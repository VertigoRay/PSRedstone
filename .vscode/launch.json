    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}"
        },
        {
            "name": "PowerShell: Invoke-Pester",
            "type": "PowerShell",
            "request": "launch",
            "script": "Start-Process -FilePath powershell -ArgumentList '-File \"${workspaceFolder}\\.build\\InvokePester.ps1\" -PressAnyKeyToContinue' -Verb 'RunAs'",
            // "script": "docker run --rm -it --name \"PSWinstall\" --read-only -v \"${workspaceFolder}\":\"C:\\${workspaceFolderBasename}\" mcr.microsoft.com/windows/servercore:ltsc2019-amd64 Invoke-Pester C:\\${workspaceFolderBasename}\\Tests",
            // "script": "docker run --rm -it --name \"PSWinstall\" -v \"${workspaceFolder}:C:\\${workspaceFolderBasename}\" mcr.microsoft.com/windows/servercore:ltsc2019-amd64 powershell.exe -NoP -Command \"cd 'C:\\${workspaceFolderBasename}\\Tests'; Invoke-Pester -OutputFile 'C:\\${workspaceFolderBasename}\\dev\\pesterResults.xml' -OutputFormat 'NUnitXML'\"",
            // "script": "docker run --rm -it --name \"PSWinstall\" -v \"${workspaceFolder}:C:\\${workspaceFolderBasename}\" mcr.microsoft.com/windows/servercore:ltsc2019-amd64 \"C:\\${workspaceFolderBasename}\\.build\\InvokePester.ps1\"",
            // "script": "docker run --rm -it --name \"PSWinstall\" mcr.microsoft.com/windows/servercore:ltsc2019-amd64 powershell.exe",
            "cwd": "${workspaceFolder}/.build"
        },
        {
            "name": "PowerShell: Invoke-Pester on Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "Start-Process -FilePath powershell -ArgumentList '-File \"${workspaceFolder}\\.build\\InvokePester.ps1\" -File \"${fileBasenameNoExtension}\" -PressAnyKeyToContinue' -Verb 'RunAs'",
            // "script": "Start-Process -FilePath powershell -ArgumentList '-Command \"cd ''${workspaceFolder}\\Tests''; Get-ChildItem -Path '${fileBasenameNoExtension}*' | %{ Invoke-Pester $_ }; Write-Host -NoNewLine ''Press any key to continue...''; $Host.UI.RawUI.ReadKey(''NoEcho,IncludeKeyDown'') | Out-Null\"' -Verb 'RunAs'",
            "cwd": "${workspaceFolder}/Tests"
        },
        {
            "name": "Docker: Build",
            "type": "PowerShell",
            "request": "launch",
            "script": "docker run --rm -it --name \"PSBacon\" -v \"${workspaceFolder}:C:\\${workspaceFolderBasename}\" mcr.microsoft.com/windows/servercore:ltsc2019-amd64 C:\\${workspaceFolderBasename}\\.build\\build.ps1",
            // "script": "docker run --rm -it --name \"PSWinstall\" -v \"${workspaceFolder}:C:\\${workspaceFolderBasename}\" mcr.microsoft.com/windows/servercore:ltsc2019-amd64 powershell.exe -NoP -Command \"cd 'C:\\${workspaceFolderBasename}\\Tests'; Invoke-Pester -OutputFile 'C:\\${workspaceFolderBasename}\\dev\\pesterResults.xml' -OutputFormat 'NUnitXML'\"",
            // "script": "docker run --rm -it --name \"PSWinstall\" -v \"${workspaceFolder}:C:\\${workspaceFolderBasename}\" mcr.microsoft.com/windows/servercore:ltsc2019-amd64 \"C:\\${workspaceFolderBasename}\\.build\\InvokePester.ps1\"",
            // "script": "docker run --rm -it --name \"PSWinstall\" mcr.microsoft.com/windows/servercore:ltsc2019-amd64 powershell.exe",
            "cwd": "${workspaceFolder}/.build"
        }
    ]
}